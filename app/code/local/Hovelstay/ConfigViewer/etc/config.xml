<config>
    <modules>
        <Hovelstay_ConfigViewer>
            <version>0.1.0</version>
        </Hovelstay_ConfigViewer>
    </modules>

    <global>
        <events>
            <controller_front_init_routers>
                <observers>
                    <hovelstay_configviewer_model_observer>
                        <type>singleton</type>
                        <class>Hovelstay_ConfigViewer_Model_Observer</class>
                        <method>checkForConfigRequest</method>
                    </hovelstay_configviewer_model_observer>
                </observers>
            </controller_front_init_routers>

        </events>

    </global>

</config>
